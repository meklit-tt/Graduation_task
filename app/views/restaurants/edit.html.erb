<div class="col-md-6 col-md-offset-3">

	<div class="edit-book-form">

		<h1>Edit Restaurant</h1>

		<%= simple_form_for @restaurant, :html => { :multipart => true } do |f| %>
			<%= f.select :category_id, @categories %>
			<%= f.file_field :rest_image %>
			<%= f.input :name, label: "Restaurant Name" %>
			<%= f.input :address %>
			<%= f.input :specials %>
			<%= f.button :submit, :class => "btn-custom2" %>
		<% end %>

	</div>

</div>
